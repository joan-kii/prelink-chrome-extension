{
  "name": "PreLink",
  "description": "Preview and learn about a link without clicking on it",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "/assets/prelink16.png",
      "32": "/assets/prelink32.png",
      "48": "/assets/prelink48.png",
      "128": "/assets/prelink128.png"
    }
  },
  "icons": {
    "16": "/assets/prelink16.png",
    "32": "/assets/prelink32.png",
    "48": "/assets/prelink48.png",
    "128": "/assets/prelink128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["insert.css"]
    }
  ],
  "options_page": "options.html",
  "default_title": "PreLink Previsualizer"
}
